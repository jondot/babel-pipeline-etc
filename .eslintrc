{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-flow",
    "standard-jsx",
    "plugin:react/recommended",
    "prettier",
    "prettier/flowtype",
    "prettier/react",
    "prettier/standard"
  ],
  "parserOptions": {
    "logicalAssignment": true
  },
  "plugins": [
    "babel",
    "logicalAssignment",
    "prettier",
    "standard"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "singleQuote": true
      }
    ],
    "prettier/semi": 0,
    "space-before-function-paren": 0,
    "comma-dangle": 0,
    "jsx-quotes": 0
  },
  "env": {
    "jest": true
  }
}